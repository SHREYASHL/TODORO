  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Shreyash\",\n  \"email\": \"shreyash@example.com\",\n  \"password\": \"1234\"\n}"
        },
        "url": { "raw": "http://127.0.0.1:8000/auth/signup", "protocol": "http", "host": ["127.0.0.1"], "port": "8000", "path": ["auth", "signup"] }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"shreyash@example.com\",\n  \"password\": \"1234\"\n}"
        },
        "url": { "raw": "http://127.0.0.1:8000/auth/login", "protocol": "http", "host": ["127.0.0.1"], "port": "8000", "path": ["auth", "login"] }
