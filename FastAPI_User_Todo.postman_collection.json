    {
      "name": "Create Todo",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Finish FastAPI project\",\n  \"description\": \"Submit before tomorrow\"\n}"
        },
        "url": { "raw": "http://127.0.0.1:8000/todos/", "protocol": "http", "host": ["127.0.0.1"], "port": "8000", "path": ["todos", ""] }
      }
    },
    {
      "name": "List Todos",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "http://127.0.0.1:8000/todos/", "protocol": "http", "host": ["127.0.0.1"], "port": "8000", "path": ["todos", ""] }
